<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.ListFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_list_gradient">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:expandedTitleGravity="top"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fragment_list_img_headset"
                        android:layout_width="@dimen/headset_width"
                        android:layout_height="@dimen/headset_height"
                        android:adjustViewBounds="true"
                        android:src="@drawable/headset"
                        app:layout_constraintBottom_toTopOf="@+id/fragment_list_img_shadow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fragment_list_img_shadow"
                        android:layout_width="@dimen/headset_width"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shadow_headset"
                        app:layout_constraintEnd_toEndOf="@+id/fragment_list_img_headset"
                        app:layout_constraintStart_toStartOf="@+id/fragment_list_img_headset"
                        app:layout_constraintTop_toBottomOf="@id/fragment_list_img_headset"
                        app:layout_constraintBottom_toBottomOf="@id/fragment_list_img_headset"
                        tools:layout_editor_absoluteY="200dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/fragment_list_btn_logout"
                        android:layout_width="163dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/custom_button"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/add"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_list_img_shadow" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/fragment_list_question_button"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/custom_button"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/question"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/fragment_list_btn_logout"
                        app:layout_constraintStart_toEndOf="@+id/fragment_list_btn_logout"
                        app:layout_constraintTop_toTopOf="@+id/fragment_list_btn_logout" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_list_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/list_item" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>