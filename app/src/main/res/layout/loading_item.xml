<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_300"
    android:layout_marginBottom="0.5dp">

    <View
        android:id="@+id/fragment_list_card"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        android:background="@color/bg_shimmer"
        android:layout_margin="16dp">
    </View>

    <View
        android:id="@+id/fragment_list_txt_title"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:background="@color/bg_shimmer"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_list_txt_label_currency"
        app:layout_constraintStart_toEndOf="@+id/fragment_list_card"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fragment_list_img_star"
        android:layout_width="80dp"
        android:layout_height="13dp"
        android:layout_gravity="center_vertical"
        android:background="@color/bg_shimmer"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_list_card"
        app:layout_constraintStart_toStartOf="@+id/fragment_list_txt_title"
        app:layout_constraintTop_toBottomOf="@+id/fragment_list_txt_title"
        />

    <View
        android:id="@+id/fragment_list_txt_reviews_label"
        android:layout_width="63dp"
        android:layout_height="13dp"
        android:layout_marginStart="8dp"
        android:background="@color/bg_shimmer"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_list_img_star"
        app:layout_constraintStart_toEndOf="@+id/fragment_list_img_star"
        app:layout_constraintTop_toTopOf="@+id/fragment_list_img_star" />

    <View
        android:id="@+id/fragment_list_txt_label_currency"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginStart="64dp"
        android:background="@color/bg_shimmer"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_list_card"
        app:layout_constraintStart_toEndOf="@+id/fragment_list_txt_title"
        app:layout_constraintTop_toTopOf="@+id/fragment_list_card" />

</androidx.constraintlayout.widget.ConstraintLayout>